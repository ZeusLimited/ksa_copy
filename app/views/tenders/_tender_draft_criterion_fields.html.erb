<%= field_set_tag nil, class: "coloring tender_draft_criterions" do %>
  <%= f.hidden_field :_destroy %>

  <div class="row">
    <div class="span1"><%= f.input :num, input_html: {class: 'input-block-level'} %></div>
    <div class="span5"><%= f.input :name, as: :text, input_html: {rows: 2, class: 'draft_name input-block-level'} %></div>
    <div class="span1">
      <label>&nbsp;</label>
      <%= content_tag :a, "Справочник", href: "#", class: 'btn select_draft', data: {toggle: 'modal'} %>
    </div>
    <div class="span3">
      <label>Направления оценки предложения</label>
      <%= f.select :destination_ids, options_for_select(Dictionary.destinations.map { |t| [t.name, t.id, {'title' => t.fullname}]}, f.object.destination_ids), {}, class: 'select-title input-block-level', 'data-placeholder' => 'Выберите направление оценки', multiple: true %>
    </div>
    <div class="span2">
      <label>&nbsp;</label>
      <%= link_to content_tag(:i, '', class: 'icon-minus') + " Удалить", '#', class: "remove_draft_criterion pull-right btn btn-danger" %>
    </div>
  </div>

<% end %>
