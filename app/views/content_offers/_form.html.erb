<%= simple_form_for(content_offer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :num %>
    <%= f.input :position %>
    <%= f.input :content_offer_type_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
