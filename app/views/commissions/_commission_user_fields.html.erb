<fieldset class="commission_user user-info">
  <%= f.hidden_field :_destroy %>

  <div class="row">
    <div class="span3">
      <%= f.input :user_name, input_html: { class: 'user-name input-block-level' } %>
      <%= f.hidden_field :user_id, class: 'user-id' %>
    </div>

    <div class="span3">
      <%= f.input :user_job, input_html: { class: 'input-block-level'} %>
    </div>

    <div class="span3">
      <%= f.association :assoc_status, collection: Dictionary.commissioners, include_blank: false, input_html: {class: 'input-block-level'} %>
    </div>

    <div class="span1">
      <%= f.input :is_veto, input_html: { class: 'input-block-level'} %>
    </div>

    <div class="span2">
      <label>&nbsp;</label>
      <div class="controls">
        <%= link_to content_tag(:i, '', class: 'icon-minus') + " Удалить", '#', class: "remove_fields btn btn-danger pull-right input-block-level" %>
      </div>
    </div>
  </div>

</fieldset>